@model List<AccountBook.Models.ViewModels.AccountInputItemViewModels>

@{int i = 0; }
<div class="form-horizontal">
    <div class="form-group">
            <table class="table table-bordered table-hover">
              
                <tr>
                    <th>#</th>
                    <th>類別</th>
                    <th>日期</th>
                    <th>金額</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <th>@(++i)</th>
                        <th>@(AccountBook.Models.ConvertService.AccountTypeConverter.ToString(item.AccountType))</th>
                        <th>@(item.Date.ToString("yyyy-MM-dd"))</th>
                        <th>@(item.Amount.ToString("#,###"))</th>
                    </tr>

                }
            </table>
    </div>

</div>



